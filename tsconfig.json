{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./public/",
    "target": "ES6",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "components/*": ["src/components/*"],
      "helpers": ["src/helpers"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
    },
  },
  "include": ["src/**/*"],
}
